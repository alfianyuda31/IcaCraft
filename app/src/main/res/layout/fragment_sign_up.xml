<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.auth.signin.SignInFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:layout_marginTop="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="26dp"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/pic"
            android:layout_width="110dp"
            android:layout_height="110dp">
        </ImageView>


        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextView.PoppinsNormal16sp020202"
            android:text="Nama Lengkap" />

        <EditText
            style="@style/EditText.PoppinsNormal14sp020202"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_6"
            android:layout_marginTop="6dp"
            android:hint="Masukkan nama lengkap anda"
            android:padding="10dp" />

        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextView.PoppinsNormal16sp020202"
            android:text="Alamat Email" />

        <EditText
            style="@style/EditText.PoppinsNormal14sp020202"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_6"
            android:layout_marginTop="6dp"
            android:hint="Masukkan alamat email anda"
            android:padding="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="@style/TextView.PoppinsNormal16sp020202"
            android:text="Kata Sandi" />

        <EditText
            android:inputType="textPassword"
            style="@style/EditText.PoppinsNormal14sp020202"
            android:hint="Masukkan kata sandi anda"
            android:background="@drawable/rectangle_6"
            android:layout_marginTop="6dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_Continue"
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:text="Selanjutnya"
            android:textAllCaps="false" />



    </LinearLayout>

</androidx.core.widget.NestedScrollView>