<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.order.OrderFragment" >

    <ImageView
        android:layout_marginTop="100dp"
        android:id="@+id/text_dashboard"
        android:src="@drawable/ilustrasi_home"
        android:layout_width="200dp"
        android:layout_height="201dp" />
    <TextView
        android:layout_marginTop="30dp"
        android:text="Haii !!!"
        style="@style/TextView.PoppinsNormal20sp020202"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="6dp"
        android:text="Kelihatannya anda belum\nmemesan kerajinan !!!"
        style="@style/TextView.PoppinsNormal14sp8D92A3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"/>

    <Button
        android:text="Temukan Kerajinan"
        style="@style/Button.Primary"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
</LinearLayout>