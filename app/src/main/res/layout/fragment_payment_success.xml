<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="100dp"
    android:orientation="vertical"
    tools:context="com.example.icacraft.ui.detail.PaymentSuccessFragment">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="200dp"
        android:layout_height="201dp"
        android:src="@drawable/ilustrasi_pengiriman"/>
    
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anda Telah Membuat Pesanan"
        android:layout_marginTop="30dp"
        style="@style/TextView.PoppinsNormal20sp020202"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesanan anda sedang disiapkan,\n silahkan tunggu di rumah!"
        android:textAlignment="center"
        android:layout_marginTop="6dp"
        style="@style/TextView.PoppinsNormal14sp8D92A3"/>
    
    <Button
        android:id="@+id/btnOtherCraft"
        android:text="Beli Kerajinan Lain"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        style="@style/Button.Primary"/>

    <Button
        android:id="@+id/btnMyOrder"
        android:text="Lihat Pesanan Saya"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:textAllCaps="false"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        style="@style/Button.Secondary"/>

</LinearLayout>